<div class="dashboardback">
    <div class="row">
      <div class="col-sm-4"></div>
        <div class="col-sm-4">
         <h1 class="display-4 text-center" style="color: #fff;">Welcome!</h1>
      </div>
      <div class="col-sm-4"></div>
    </div>
 </div>
<div>
  <a class="btn btn-lg btn-outline btn-block" href="/repair_orders/new">Create Order</a>
</div>


<div class="container" style="padding-top: 5%">
<div class="row">

<!-- awaiting parts -->
  <div class="coll">
    <div class="container">
<button type="button" class="btn btn-dash">
  Awaiting Parts <span class="badge badge-light"><%=  @count_awaiting_orders%></span>
  <span class="sr-only"></span>
</button>
</div>
  </div>

<!--pending orders-->
  <div class="coll">
    <div class="container">
  <button type="button" class="btn btn-dash">
    Pending Orders <span class="badge badge-light"><%=@count_pending_orders%></span>
    <span class="sr-only"></span>
  </button>
    </div>
</div>

<!--active-->
  <div class="coll">
    <div class="container">
  <button type="button" class="btn btn-dash">
    Active Orders <span class="badge badge-light"> <%=@count_open_orders%></span>
    <span class="sr-only"></span>
  </button>
    </div>
</div>

<!--on hold-->
  <div class="coll">
<div class="container">
  <button type="button" class="btn btn-dash">
    Orders On Hold <span class="badge badge-light"><%=@count_hold_orders%></span>
    <span class="sr-only"></span>
  </button>
</div>
</div>
<!--completed-->
  <div class="coll">
<div class="container">
  <button type="button" class="btn btn-dash">
    Completed Orders <span class="badge badge-light"><%=@count_completed_order%></span>
    <span class="sr-only"></span>
  </button>
</div>
    </div>

</div>

</div>

<br>
<!---Completed Orders  ----->
  <div class="container">
  <div class="align-self-center">
  <h3 align="center">Completed Orders</h3>
</div>
    <div class="align-self-center">
  <table align="center">
    <thead>
    <tr>
      <th>Customer First Name</th>
      <th>Customer Last Name</th>
      <th>Phone Number</th>
      <th>Order Notes</th>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% @repair_orders.each do |repair_order| %>
        <tr>

          <td><%= repair_order.customer.customer_fname %></td>
          <td><%= repair_order.customer.customer_lname %></td>
          <td><%= repair_order.customer.customer_phone %></td>
          <td><%= repair_order.repair_order_notes %></td>
          <td><%= link_to 'View', edit_repair_order_path(repair_order) %></td>


        </tr>
    <% end %>
    </tbody>
  </table>
</div>

</div>



