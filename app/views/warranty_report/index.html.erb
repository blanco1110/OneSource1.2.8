<h1>Warranty Report</h1>
<%= form_tag(warranty_report_path, :method => :post) do %>
    <p>Start Date</p>
    <%= date_field_tag :start_date %>
    <p>End Date</p>
    <%= date_field_tag :end_date %>

    <br>
    <br>
    <%= submit_tag "Submit" %>
<%end %>
<br>
<!--<p><b>%= render "repair_order_report/start_date" %> - <%= render "repair_order_report/end_date" %> </b></p>-->

  <%= render "warranty_report/warranty_report_count" %></p>
<br>
<table>
  <thead>
  <tr>
    <th>Warranty Repair Date</th>
    <th>Device IMEI</th>
    <th>Component</th>
    <th>Technician</th>

    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @repair_order_items.each do |repair_order_item| %>
      <tr>
        <td><%= repair_order_item.warranty_repair_date %></td>
        <td><%= repair_order_item.device.imei_number %></td>
        <td><%= repair_order_item.device_component.device_comp_name %></td>
        <td><%= repair_order_item.technician.tech_name %></td>
        <td><%= link_to 'Show', repair_order_item %></td>
        <td><%= link_to 'Edit', edit_repair_order_item_path(repair_order_item) %></td>
        <td><%= link_to 'Destroy', repair_order_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
  <% end %>
  </tbody>
</table>