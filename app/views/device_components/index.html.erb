<p id="notice"><%= notice %></p>
<div class="container">
<h1>Device Components</h1>
  <table class="table table-hover table-responsive">
  <thead>
    <tr>
      <th>Device Version</th>
      <th>Name</th>
      <th>Color</th>
      <th>Description</th>
      <th>Status</th>
      <th>Cost</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @device_components.each do |device_component| %>
      <tr>
        <td><%= device_component.device_version.device_version_name %></td>
        <td><%= device_component.device_comp_name %></td>
        <td><%= device_component.device_comp_color %></td>
        <td><%= device_component.device_comp_description %></td>
        <td><%= device_component.device_component_status.device_comp_status %></td>
        <td><%= number_to_currency(device_component.device_comp_cost) %></td>
        <td><%= link_to 'Show', device_component %></td>
        <td><%= link_to 'Edit', edit_device_component_path(device_component) %></td>
        <td><%= link_to 'Destroy', device_component, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

    <div class="col-sm-1 col-xs-1 col-md-1 col-lg-1">
      <a class="btn btn-outline" href="device_components/new">New Component</a>
    </div>
</div>