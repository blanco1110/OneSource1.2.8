<p id="notice"><%= notice %></p>
<div class="container">
<h1>Statuses for the Repair Orders</h1>
  <table class="table table-hover table-responsive">
  <thead>
    <tr>
      <th>Status Type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @repair_order_statuses.each do |repair_order_status| %>
      <tr>
        <td><%= repair_order_status.repair_order_status %></td>
        <td><%= link_to 'Show', repair_order_status %></td>
        <td><%= link_to 'Edit', edit_repair_order_status_path(repair_order_status) %></td>
        <td><%= link_to 'Destroy', repair_order_status, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

  <div class="col-sm-1 col-xs-1 col-md-1 col-lg-1">
    <a class="btn btn-outline" href="repair_order_statuses/new">New Repair Order Status</a>
  </div>
</div>