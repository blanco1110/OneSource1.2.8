<p id="notice"><%= notice %></p>
<div class="container">
<h1>Customers</h1>

  <table class="table table-responsive table-hover">
  <thead>
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Email</th>
      <th>Phone Number</th>
      <th>Receive Calls?</th>
      <th>Receive Texts?</th>
      <th>Zip Code</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @customers.each do |customer| %>
      <tr>
        <td><%= customer.customer_fname %></td>
        <td><%= customer.customer_lname %></td>
        <td><%= customer.customer_email %></td>
        <td><%= customer.customer_phone %></td>
        <td><%= customer.customer_call %></td>
        <td><%= customer.customer_text %></td>
        <td><%= customer.customer_zip %></td>
        <td><%= link_to 'Show', customer %></td>
        <td><%= link_to 'Edit', edit_customer_path(customer) %></td>
        <td><%= link_to 'Destroy', customer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<div class="col-sm-1 col-xs-1 col-md-1 col-lg-1">
  <a class="btn btn-outline" href="/customers/new">New Customer</a>
</div>
</div>
