<div class="card" style="border-color: #222629; background-color: #22262920">
  <div class="card-body">
    <h4>Enter The Repair Item Information</h4>
    <fieldset>
      <div class="row">
        <div class="col-sm-2">
          <div class="field">
            <%= form.label :device_component_id, "Component" %>
            <%= form.collection_select :device_component_id, DeviceComponent.all, :id, :device_comp_name %>
          </div>
        </div>
        <div class="col-sm-2">
            <div class="field">
              <%= form.label :technician_id, "Technician" %>
              <%= form.collection_select :technician_id, Technician.all, :id, :tech_name %>
            </div>
        </div>
        <div class="col-sm-4">
           <div class="field">
             <%= form.label :warranty_expire_date, "Warranty Expiration Date" %>
             <%= form.date_select :warranty_expire_date, id: :repair_order_item_warranty_expire_date, :disabled => true, :include_blank => true%>
           </div>
        </div>
        <div class="col-sm-2">
            <div class="field">
              <%= form.label :warranty_coverage_notes, "Notes" %>
              <%= form.text_area :warranty_coverage_notes, id: :repair_order_item_warranty_coverage_notes %>
            </div>
        </div>
      </div>
         <div class="row">
          <div class="col-sm-4">
            <div class="field">
              <%= form.label :repaired_as_warranty, "Repaired Under Warranty" %>
              <%= form.check_box :repaired_as_warranty, id: :repair_order_item_repaired_as_warranty %>
            </div>
        </div>
        <div class="col-sm-4">
            <div class="field">
              <%= form.label :warranty_repair_date, "Warranty Repair Date" %>
              <%= form.date_select :warranty_repair_date, id: :repair_order_item_warranty_repair_date, :disabled => true,  :include_blank => true%>
            </div>
        </div>
        <div class="col-sm-3">
            <div class="field">
              <%= form.label :price,"Price" %>
               <%= form.text_field :price, id: :repair_order_item_price %>
            </div>
        </div>
      </div>
    </fieldset>
  </div>
</div>