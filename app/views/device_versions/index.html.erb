<p id="notice"><%= notice %></p>
<div class="container">
<h1>Versions</h1>
  <table class="table table-hover table-responsive">
  <thead>
    <tr>
      <th>Name</th>
      <th>Manufacturer</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @device_versions.each do |device_version| %>
      <tr>
        <td><%= device_version.device_version_name %></td>
        <td><%= device_version.device_manufacturer.device_manu_name %></td>
        <td><%= link_to 'View', edit_device_version_path(device_version) %></td>

      </tr>
    <% end %>
  </tbody>
</table>

<br>

    <div class="col-sm-1 col-xs-1 col-md-1 col-lg-1">
      <a class="btn btn-outline" href="device_versions/new">New Device Version</a>
    </div>


</div>