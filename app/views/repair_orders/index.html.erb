<p id="notice"><%= notice %></p>
<div class="container">
<h1>Repair Orders</h1>
  <table class="table table-hover table-responsive">
  <thead>
    <tr>
      <th>Status</th>
      <th>Date</th>
      <th>Subtotal</th>
      <th>Tax</th>
      <th>Total</th>
      <th>Accessories</th>
      <th>Notes</th>
      <th>Customer</th>
      <th>Date of Status Change </th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @repair_orders.each do |repair_order| %>
      <tr>
        <td><%= repair_order.repair_order_status %></td>
        <td><%= repair_order.repair_order_date %></td>
        <td><%= repair_order.repair_order_subtotal %></td>
        <td><%= repair_order.repair_order_tax %></td>
        <td><%= repair_order.repair_order_total %></td>
        <td><%= repair_order.repair_order_accessories %></td>
        <td><%= repair_order.repair_order_notes %></td>
        <td><%= repair_order.customer %></td>
        <td><%= repair_order.repair_order_status_date %></td>
        <td><%= link_to 'Show', repair_order %></td>
        <td><%= link_to 'Edit', edit_repair_order_path(repair_order) %></td>
        <td><%= link_to 'Destroy', repair_order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

    <div class="col-sm-1 col-xs-1 col-md-1 col-lg-1">
      <a class="btn btn-outline" href="repair_orders/new">New Repair Order</a>
    </div>
</div>