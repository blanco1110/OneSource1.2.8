<p id="notice"><%= notice %></p>
<div class="container">
<h1>Manufacturers</h1>
  <table class="table table-hover table-responsive">
  <thead>
    <tr>
      <th>Manufacturers Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @device_manufacturers.each do |device_manufacturer| %>
      <tr>
        <td><%= device_manufacturer.device_manu_name %></td>
        <td><%= link_to 'Show', device_manufacturer %></td>
        <td><%= link_to 'Edit', edit_device_manufacturer_path(device_manufacturer) %></td>
        <td><%= link_to 'Destroy', device_manufacturer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

  <div class="col-sm-1 col-xs-1 col-md-1 col-lg-1">
    <a class="btn btn-outline" href="device_manufacturers/new">New Device Manufacturer</a>
  </div>
</div>